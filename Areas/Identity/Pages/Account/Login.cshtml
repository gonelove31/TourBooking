@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng Nhập";
}

<style>
    body {
        background-color: #f8f9fa; 
    }

    .login-container {
        background-color: #e0f7fa; /* Màu nền mới */
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-floating label {
        color: #6c757d;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .text-danger {
        color: #dc3545 !important;
    }

    .link {
        color: #007bff;
        text-decoration: none;
    }

        .link:hover {
            text-decoration: underline;
        }

    h1, h2, h3 {
        color: #343a40;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="login-container">
                <h1>@ViewData["Title"]</h1>
                <form id="account" method="post">
                    <h2>Sử dụng tài khoản cục bộ.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <div class="mt-3">
                        <p><a id="forgot-password" asp-page="./ForgotPassword" class="link">Quên mật khẩu</a></p>
                        <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link">Đăng ký tài khỏan mới</a></p>
                        <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="link">Xác thực email</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row justify-content-center mt-5">
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}